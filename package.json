{
  "name": "hypercore-advanced-suite",
  "version": "1.0.0",
  "description": "HyperCore Advanced Suite - Transaction Simulator & Cross-Chain Arbitrage",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:contracts && npm run build:simulator && npm run build:arbitrage",
    "build:contracts": "hardhat compile",
    "build:simulator": "cd simulator && cargo build --release",
    "build:arbitrage": "cd arbitrage && go build ./...",
    "test": "npm run test:contracts && npm run test:simulator",
    "test:contracts": "hardhat test",
    "test:simulator": "cd simulator && cargo test",
    "dev": "concurrently \"npm run dev:simulator\" \"npm run dev:arbitrage\"",
    "dev:simulator": "cd simulator && cargo watch -x run",
    "dev:arbitrage": "cd arbitrage && go run main.go",
    "deploy": "hardhat run scripts/deploy.js --network hyperliquid",
    "verify": "hardhat verify --network hyperliquid"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "ethers": "^6.9.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "ws": "^8.15.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.19.0",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}